<UserControl
    x:Class="Notes.APP.CustomCtrls.ConfirmPopup"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Width="250"
    Height="100">
    <Grid>
        <Popup
            x:Name="popupMessage"
            Width="250"
            Height="120"
            AllowsTransparency="True"
            Opacity="0.9"
            Placement="Absolute"
            PopupAnimation="Fade"
            StaysOpen="True">
            <Border
                Padding="10"
                Background="White"
                BorderBrush="Gray"
                BorderThickness="1"
                CornerRadius="15">
                <StackPanel Orientation="Vertical">
                    <TextBlock
                        x:Name="messageIcon"
                        Margin="0,0,5,0"
                        FontSize="16" />
                    <TextBlock
                        x:Name="messageText"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="14"
                        Foreground="Black"
                        TextWrapping="Wrap" />
                    <StackPanel
                        x:Name="buttonPanel"
                        Margin="0,10,0,0"
                        HorizontalAlignment="Center"
                        Orientation="Horizontal">
                        <Button
                            x:Name="confirmButton"
                            Width="80"
                            Margin="5"
                            Background="LightGreen"
                            BorderBrush="Transparent"
                            BorderThickness="0"
                            Content="确定"
                            Foreground="Black">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border
                                        Padding="3"
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="0"
                                        CornerRadius="8">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                        <Button
                            x:Name="cancelButton"
                            Width="80"
                            Margin="5"
                            Background="LightGray"
                            Content="取消"
                            Foreground="Black">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="0"
                                        CornerRadius="8">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Popup>
    </Grid>
</UserControl>
