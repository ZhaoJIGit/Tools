<Window
    x:Class="Notes.APP.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:Notes.APP.CustomCtrls"
    xmlns:tb="http://www.hardcodet.net/taskbar"
    xmlns:xc="http://schemas.xceed.com/wpf/xaml/toolkit"
    Name="NoteDetail"
    Title="便签"
    MinWidth="250"
    MinHeight="70"
    AllowsTransparency="True"
    Background="Transparent"
    ContentRendered="Window_ContentRendered"
    Loaded="Window_Loaded"
    Opacity="{Binding Opacity, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
    PreviewKeyDown="Window_PreviewKeyDown"
    ShowInTaskbar="False"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None">
    <Window.Resources>
        <!--  定义动画  -->
        <Storyboard x:Key="OpenDrawer">
            <DoubleAnimation
                AutoReverse="False"
                Storyboard.TargetName="DrawerPanel"
                Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
                From="300"
                To="0"
                Duration="0:0:0.3" />
        </Storyboard>

        <Storyboard x:Key="CloseDrawer">
            <DoubleAnimation
                AutoReverse="False"
                Storyboard.TargetName="DrawerPanel"
                Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
                From="0"
                To="300"
                Duration="0:0:0.3" />
        </Storyboard>
        <Storyboard x:Key="CollapseContent">
            <DoubleAnimation
                Storyboard.TargetName="pageBorder"
                Storyboard.TargetProperty="Height"
                To="0"
                Duration="0:0:0.3" />
        </Storyboard>

        <Storyboard x:Key="ExpandContent">
            <DoubleAnimation
                Storyboard.TargetName="pageBorder"
                Storyboard.TargetProperty="Height"
                To="250"
                Duration="0:0:0.3" />
        </Storyboard>
    </Window.Resources>
    <Grid>
        <Border
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            BorderBrush="Transparent"
            BorderThickness="1">
            <!--  添加阴影效果  -->
            <Border.Effect>
                <DropShadowEffect
                    BlurRadius="10"
                    Direction="0"
                    Opacity="0.3"
                    ShadowDepth="0"
                    Color="Black" />
            </Border.Effect>
            <Grid
                Margin="3"
                MouseEnter="Grid_MouseEnter"
                MouseLeave="Grid_MouseLeave">
                <Grid.RowDefinitions>
                    <RowDefinition Height="40" />
                    <RowDefinition x:Name="gridContent" Height="*" />
                    <RowDefinition Height="20" />
                </Grid.RowDefinitions>
                <!--  自定义标题栏  -->
                <Border
                    Grid.Row="0"
                    Height="40"
                    VerticalAlignment="Top"
                    Background="{Binding BackgroundColor, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    BorderBrush="#bfc1be"
                    MouseLeftButtonDown="OnMouseLeftButtonDown"
                    MouseMove="Window_MouseMove">
                    <Border.CornerRadius>
                        <CornerRadius
                            BottomLeft="0"
                            BottomRight="0"
                            TopLeft="15"
                            TopRight="15" />
                    </Border.CornerRadius>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="50" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="150" />
                        </Grid.ColumnDefinitions>
                        <!--  左侧标题  -->
                        <!--<Button
                            Margin="10"
                            VerticalAlignment="Center"
                            Content="&#xE948;"
                            FontFamily="Segoe MDL2 Assets"
                            FontSize="16"
                            Foreground="{Binding Color, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            MouseLeftButtonDown="TextButton_Click" />-->
                        <Button
                            Grid.Column="0"
                            Width="30"
                            Height="30"
                            Background="Transparent"
                            BorderThickness="0"
                            Click="TextButton_Click"
                            Content="&#xE948;"
                            FontFamily="Segoe MDL2 Assets"
                            FontSize="18"
                            Foreground="{Binding Color}" />
                        <!--  右侧按钮  -->
                        <StackPanel
                            Grid.Column="2"
                            Margin="0,0,10,0"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                            <Grid Height="30">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="30" />
                                    <ColumnDefinition Width="30" />
                                    <ColumnDefinition Width="30" />
                                    <ColumnDefinition Width="30" />
                                </Grid.ColumnDefinitions>
                                <Button
                                    x:Name="btnFixed"
                                    Grid.Column="0"
                                    Width="30"
                                    Height="30"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Click="Fix_Click"
                                    Content="&#xE840;"
                                    FontFamily="Segoe MDL2 Assets"
                                    FontSize="18"
                                    Foreground="{Binding Color}" />
                                <Button
                                    Grid.Column="1"
                                    Width="30"
                                    Height="30"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Click="More_Click"
                                    Content="&#xEA55;"
                                    FontFamily="Segoe MDL2 Assets"
                                    FontSize="18"
                                    Foreground="{Binding Color}" />
                                <!--  折叠按钮  -->
                                <Button
                                    Name="btnCollapse"
                                    Grid.Column="2"
                                    Width="30"
                                    Height="30"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Click="CollapseButton_Click"
                                    Content="&#xE70E;"
                                    FontFamily="Segoe MDL2 Assets"
                                    FontSize="16"
                                    Foreground="{Binding Color, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                <!--  最小化按钮  -->
                                <Button
                                    Grid.Column="3"
                                    Width="30"
                                    Height="30"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Click="MinimizeButton_Click"
                                    Content="&#xE8BB;"
                                    FontFamily="Segoe MDL2 Assets"
                                    Foreground="{Binding Color, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                <!--  关闭按钮  -->
                                <!--<Button
                                    Grid.Column="3"
                                    Width="30"
                                    Height="30"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Click="CloseButton_Click"
                                    Content="&#xE8BB;"
                                    FontFamily="Segoe MDL2 Assets"
                                    Foreground="{Binding Color, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />-->


                            </Grid>

                        </StackPanel>
                    </Grid>
                </Border>
                <!--  主内容  -->
                <Border
                    Name="pageBorder"
                    Grid.Row="1"
                    Background="{Binding BackgroundColor, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    BorderBrush="{Binding PageBackgroundColor, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    Opacity="0.8">
                    <Border.CornerRadius>
                        <CornerRadius
                            BottomLeft="0"
                            BottomRight="0"
                            TopLeft="0"
                            TopRight="0" />
                    </Border.CornerRadius>
                    <Grid Margin="0,0,0,0">
                        <Border ClipToBounds="True" CornerRadius="20">
                            <Frame
                                x:Name="MainFrame"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                NavigationUIVisibility="Hidden" />
                        </Border>
                    </Grid>

                </Border>

                <!--  尾部  -->
                <Border
                    Grid.Row="2"
                    Background="{Binding BackgroundColor, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    BorderBrush="#bfc1be">
                    <Border.CornerRadius>
                        <CornerRadius
                            BottomLeft="15"
                            BottomRight="15"
                            TopLeft="0"
                            TopRight="0" />
                    </Border.CornerRadius>
                    <Grid>
                        <TextBlock
                            Grid.Row="1"
                            Margin="10,3"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Bottom"
                            Foreground="{Binding Color, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            Text="{Binding UpdateTimeStr}" />
                        <Thumb
                            Name="ResizeHandle"
                            Width="16"
                            Height="16"
                            Margin="0,0,2,2"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Bottom"
                            Background="Gray"
                            Cursor="SizeNWSE"
                            DragDelta="ResizeHandle_DragDelta">
                            <Thumb.Template>
                                <ControlTemplate TargetType="Thumb">
                                    <Border
                                        Width="16"
                                        Height="16"
                                        Background="{TemplateBinding Background}"
                                        CornerRadius="8"
                                        Opacity="0.4">
                                        <Border.RenderTransform>
                                            <TranslateTransform X="0" Y="0" />
                                        </Border.RenderTransform>
                                    </Border>
                                </ControlTemplate>
                            </Thumb.Template>
                        </Thumb>
                    </Grid>



                </Border>

                <!--  透明遮罩区域，用于关闭抽屉  -->
                <Grid
                    x:Name="CloseArea"
                    Grid.Row="1"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Background="Transparent"
                    MouseLeftButtonDown="CloseArea_MouseLeftButtonDown"
                    Visibility="Collapsed" />
                <!--  抽屉页  -->
                <!--  抽屉页  -->
                <Border
                    x:Name="DrawerPanel"
                    Grid.Row="1"
                    Width="150"
                    Height="200"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Background="#f8f8f8"
                    BorderThickness="1"
                    Opacity="0.8"
                    Visibility="Collapsed">
                    <Border.CornerRadius>
                        <CornerRadius
                            BottomLeft="5"
                            BottomRight="0"
                            TopLeft="5"
                            TopRight="0" />
                    </Border.CornerRadius>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="20" />
                            <RowDefinition Height="25" />
                            <RowDefinition Height="20" />
                            <RowDefinition Height="30" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="1" />
                            <RowDefinition Height="40" />
                            <RowDefinition Height="40" />
                        </Grid.RowDefinitions>
                        <TextBlock
                            Grid.Row="0"
                            Margin="2"
                            Foreground="#000"
                            Text="颜色" />
                        <!--  颜色选择  -->
                        <!--  色彩板  -->
                        <xc:ColorPicker
                            Name="MyColorPicker"
                            Grid.Row="1"
                            Width="150"
                            DisplayColorAndName="True"
                            SelectedColorChanged="ColorCanvas_SelectedColorChanged" />
                        <TextBlock
                            Grid.Row="2"
                            Margin="2"
                            Foreground="#000"
                            Text="透明度" />
                        <!--  透明度  -->
                        <Slider
                            Grid.Row="3"
                            Width="130"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Maximum="1"
                            Minimum="0.1"
                            ValueChanged="Slider_ValueChanged"
                            Value="{Binding Opacity}">
                            <Slider.Template>
                                <ControlTemplate TargetType="Slider">
                                    <Grid>
                                        <!--  Track  -->
                                        <Track Name="PART_Track" IsDirectionReversed="False">
                                            <Track.DecreaseRepeatButton>
                                                <RepeatButton Command="Slider.DecreaseLarge" />
                                            </Track.DecreaseRepeatButton>
                                            <Track.IncreaseRepeatButton>
                                                <RepeatButton Command="Slider.IncreaseLarge" />
                                            </Track.IncreaseRepeatButton>
                                            <Track.Thumb>
                                                <Thumb
                                                    Width="10"
                                                    Height="8"
                                                    Background="#4A4343" />
                                            </Track.Thumb>
                                        </Track>
                                    </Grid>
                                </ControlTemplate>
                            </Slider.Template>

                        </Slider>
                        <!--  置顶  -->
                        <!--<StackPanel
                            Grid.Row="4"
                            Width="auto"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                            <CheckBox
                                Name="isTopUpBox"
                                Margin="5,3"
                                Checked="TopUpBox_Checked"
                                Unchecked="TopUpBox_Unchecked" />
                            <TextBlock
                                Margin="5,0"
                                VerticalAlignment="Center"
                                FontSize="14"
                                MouseLeftButtonDown="TopUp_MouseLeftButtonDown"
                                Text="窗口置顶" />
                        </StackPanel>-->
                        <!--  查看列表  -->
                        <Grid
                            Grid.Row="6"
                            HorizontalAlignment="Stretch"
                            Background="Transparent"
                            MouseLeftButtonUp="StackPanel_MouseLeftButtonDown_1">
                            <StackPanel
                                Margin="5,0,5,10"
                                VerticalAlignment="Bottom"
                                Orientation="Horizontal">
                                <TextBlock
                                    Margin="0,0,10,0"
                                    VerticalAlignment="Center"
                                    FontFamily="Segoe MDL2 Assets"
                                    FontSize="16"
                                    Text="&#xE8FD;" />
                                <TextBlock
                                    VerticalAlignment="Center"
                                    FontSize="14"
                                    Text="查看列表" />
                            </StackPanel>
                        </Grid>
                        <!--  删除  -->
                        <Grid
                            Grid.Row="7"
                            HorizontalAlignment="Stretch"
                            Background="Transparent"
                            MouseLeftButtonDown="StackPanel_MouseLeftButtonDown">
                            <StackPanel
                                Margin="5,0,5,10"
                                VerticalAlignment="Bottom"
                                Orientation="Horizontal">
                                <TextBlock
                                    Margin="0,0,10,0"
                                    VerticalAlignment="Center"
                                    FontFamily="Segoe MDL2 Assets"
                                    FontSize="16"
                                    Foreground="Red"
                                    Text="&#xE74D;" />
                                <TextBlock
                                    VerticalAlignment="Center"
                                    FontSize="14"
                                    Foreground="Red"
                                    Text="删除便签" />
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>
        </Border>

    </Grid>
</Window>
