<Window
    x:Class="Notes.APP.SettingWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Notes.APP"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="SettingWindow"
    Width="300"
    Height="400"
    MinWidth="300"
    MinHeight="320"
    AllowsTransparency="True"
    Background="Transparent"
    Loaded="Window_Loaded"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Grid>
        <Border
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            BorderBrush="Transparent"
            BorderThickness="1">
            <!--  添加阴影效果  -->
            <Border.Effect>
                <DropShadowEffect
                    BlurRadius="10"
                    Direction="0"
                    Opacity="0.5"
                    ShadowDepth="0"
                    Color="Black" />
            </Border.Effect>
            <Grid Margin="3">
                <Grid.RowDefinitions>
                    <RowDefinition Height="40" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <!--  自定义标题栏  -->
                <Border
                    Grid.Row="0"
                    Height="40"
                    VerticalAlignment="Top"
                    Background="{Binding BackGroundColor, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    BorderBrush="#bfc1be"
                    BorderThickness="0,0,0,1"
                    MouseLeftButtonDown="OnMouseLeftButtonDown"
                    MouseMove="Window_MouseMove">
                    <Border.CornerRadius>
                        <CornerRadius
                            BottomLeft="0"
                            BottomRight="0"
                            TopLeft="15"
                            TopRight="15" />
                    </Border.CornerRadius>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <!--  左侧标题  -->
                        <TextBlock
                            Grid.Column="1"
                            Margin="20,0"
                            VerticalAlignment="Center"
                            FontFamily="FangSong"
                            FontSize="16"
                            FontWeight="Bold"
                            Foreground="{Binding Color, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            Text="设置" />
                        <!--  右侧按钮  -->
                        <StackPanel
                            Grid.Column="2"
                            Margin="0,0,10,0"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                            <UniformGrid Height="30" Rows="1">
                                <!--  关闭按钮  -->
                                <Button
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Click="CloseButton_Click"
                                    Content="&#xE8BB;"
                                    FontFamily="Segoe MDL2 Assets"
                                    Foreground="{Binding Color, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            </UniformGrid>

                        </StackPanel>
                    </Grid>
                </Border>

                <!--  主内容  -->

                <Border
                    Name="pageBorder"
                    Grid.Row="2"
                    Background="{Binding BackGroundColor, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                    <Border.CornerRadius>
                        <CornerRadius
                            BottomLeft="15"
                            BottomRight="15"
                            TopLeft="0"
                            TopRight="0" />
                    </Border.CornerRadius>
                    <Grid>
                        <TabControl
                            Background="Transparent"
                            BorderThickness="1,0,0,0"
                            TabStripPlacement="Left">
                            <TabItem
                                Width="100"
                                Background="Transparent"
                                Foreground="{Binding Color, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                                <TabItem.Header>
                                    <StackPanel
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        Orientation="Horizontal">
                                        <TextBlock
                                            Margin="0,0,5,0"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Center"
                                            FontFamily="Segoe MDL2 Assets"
                                            FontSize="14"
                                            Text="&#xE713;" />
                                        <TextBlock
                                            VerticalAlignment="Center"
                                            FontSize="14"
                                            Text="通用" />
                                    </StackPanel>
                                </TabItem.Header>
                                <Grid>
                                    <StackPanel
                                        Grid.Row="0"
                                        Width="auto"
                                        VerticalAlignment="Top"
                                        Orientation="Horizontal">
                                        <CheckBox
                                            Name="isOpenRunBox"
                                            Margin="5"
                                            Checked="CheckBox_Checked"
                                            Unchecked="CheckBox_Unchecked" />
                                        <TextBlock
                                            VerticalAlignment="Center"
                                            FontSize="14"
                                            Foreground="{Binding Color, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                            MouseLeftButtonDown="TextBlock_MouseLeftButtonDown"
                                            Text="开机启动" />
                                    </StackPanel>

                                </Grid>
                            </TabItem>
                            <TabItem Background="Transparent" Foreground="{Binding Color, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                                <TabItem.Header>
                                    <StackPanel
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        Orientation="Horizontal">
                                        <TextBlock
                                            Margin="0,0,5,0"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Center"
                                            FontFamily="Segoe MDL2 Assets"
                                            FontSize="14"
                                            Text="&#xE8B8;" />
                                        <TextBlock
                                            VerticalAlignment="Center"
                                            FontSize="14"
                                            Text="存储" />
                                    </StackPanel>
                                </TabItem.Header>
                                <TextBlock Padding="10" Text="C:\Databases\Note.db" />
                            </TabItem>
                            <TabItem Background="Transparent" Foreground="{Binding Color, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                                <TabItem.Header>
                                    <StackPanel
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        Orientation="Horizontal">
                                        <TextBlock
                                            Margin="0,0,5,0"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Center"
                                            FontFamily="Segoe MDL2 Assets"
                                            FontSize="14"
                                            Text="&#xE946;" />
                                        <TextBlock
                                            VerticalAlignment="Center"
                                            FontSize="14"
                                            Text="关于" />
                                    </StackPanel>
                                </TabItem.Header>
                                <Grid Margin="10">
                                    <StackPanel>
                                        <TextBlock Text="计签使用说明" TextWrapping="Wrap" />
                                        <TextBlock Text="1、包含新建，编辑，删除，导出功能" TextWrapping="Wrap" />
                                        <Rectangle Height="10" Fill="Transparent" />
                                        <TextBlock Text="版本内容" TextWrapping="Wrap" />
                                        <TextBlock Text="1.2、新增设置、列表美化" TextWrapping="Wrap" />
                                        <TextBlock Text="1.1、新增导出功能" TextWrapping="Wrap" />
                                        <TextBlock Text="1.0、初始版本，包含新建，编辑，删除常用基础功能" TextWrapping="Wrap" />
                                    </StackPanel>

                                </Grid>
                            </TabItem>
                        </TabControl>
                    </Grid>

                </Border>



            </Grid>
        </Border>


    </Grid>

</Window>
