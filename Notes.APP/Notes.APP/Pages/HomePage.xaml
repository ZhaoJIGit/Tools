<pg:BasePage
    x:Class="Notes.APP.Pages.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:avalon="http://icsharpcode.net/sharpdevelop/avalonedit"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Notes.APP.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:pg="clr-namespace:Notes.APP.Models"
    Title="HomePage"
    d:Height="300"
    d:Width="300"
    KeyDown="txtContent_KeyDown"
    Loaded="Page_Loaded"
    mc:Ignorable="d">

    <Grid Name="pageConent" Margin="0,2">
        <avalon:TextEditor
            Name="txtContent"
            Background="Transparent"
            ShowLineNumbers="True"
            SyntaxHighlighting="C#"
            TextChanged="txtContent_TextChanged"
            WordWrap="True" />
        
